@{
    /**/

    ViewBag.Title = "Home Page";
}
@section estilos{
    <style>
        #inner-right {
            max-height: 250px;
            overflow-y: scroll;
        }
    </style>
}
@using VentasWeb.Helpers

<div id="content" class="bg-grey w-100">

    <section class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-8">
                    <h1 class="font-weight-bold mb-0">Dashboard</h1>
                    <h4 class="font-weight-bold mb-0">Ventas</h4>
                    <p class="lead text-muted">Revisa la última información</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-mix py-3">
        <div class="container">
            <div class="card rounded-0">
                <div class="card-header bg-light">
                    <h6 class="font-weight-bold mb-0">Beneficio bruto</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 d-flex stat my-3">
                            <div class="mx-auto">
                                <h6 class="text-muted">Margen de Beneficio bruto</h6>
                                @Html.MargenBeneficioBruto()
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 d-flex stat my-3">
                            <div class="mx-auto">
                                <h6 class="text-muted">Beneficio bruto</h6>
                                @Html.SumBeneficioBruto()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 my-3">
                    <div class="card rounded-0">
                        <div class="card-header bg-light">
                            <h6 class="font-weight-bold mb-0">Ganancia en ultimas ventas</h6>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-end">
                                <div class="col-sm-3">
                                    <div class="form-group mb-0">
                                        <label for="cboTienda" class="col-form-label col-form-label-sm">Categoria:</label>
                                        <select class="form-control form-control-sm model" id="cboTienda" name="Tienda"></select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group mb-0">
                                        <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row mb-2">
                                <div class="col-sm-12">
                                    <button class="btn btn-info float-left" onclick="printData()">
                                        <i class="fas fa-print"></i> Imprimir
                                    </button>
                                </div>
                            </div>
                            <div class="row" id="inner-right">
                                <div class="col-sm-12">
                                    <table id="tbReporte" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Nombre Tienda</th>
                                                <th>Cantidad</th>
                                                <th>Precio Unitario</th>
                                                <th>Total</th>
                                                <th>Ganancia</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="form-group col-sm-3">
                                <label for="txtCodigoProducto" class="col-form-label col-form-label-sm font-weight-bold">Beneficio bruto:</label>
                                <input type="text" class="" id="txtBeneficioBruto" readonly name="currency" autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 my-3">
                    <div class="card rounded-0">
                        <div class="card-header bg-light">
                            <h6 class="font-weight-bold mb-0">Ventas recientes</h6>
                        </div>
                        <div class="card-body pt-2">
                            @Html.Ultimas5Ventas()
                            <button class="btn btn-primary w-100" onclick="window.location.href='/Venta/Consultar'">Ver todas</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>


